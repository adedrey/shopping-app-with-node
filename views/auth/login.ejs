<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/login.css">


</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage){ %>
        <div class="user-message user-message-error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail:</label>
                <input class="<%= validationCss.find(p => p.param === 'email') ? 'validatorBox' : '' %>" type="email"
                    name="email" id="email" value="<%= oldValue.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password:</label>
                <input class="<%= validationCss.find(p => { return p.param === 'password' }) ? 'validatorBox' : '' %>" type="password" name="password" id="password">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <form>
                <button class="btn" type="submit">Login</button>
            </form>
            <div class="centered">
                <a href="/reset">Forgot Password?</a>
            </div>
    </main>
    <%- include('../includes/end.ejs') %>